<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <div class="field">
    <h4>title</h4>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <h4>body</h4>
    <%=f.label :body %>
    <%= f.text_area :body %> 
  </div>

  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>

<% end %>